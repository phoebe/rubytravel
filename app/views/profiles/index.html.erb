<h1>Welcome back, <%= @user.handle().capitalize() %> </h1>

<% if @user.latitude.blank? %>
location unknown
<% else %>
<%= @user.city %>
<%= @user.state %>
<% end %>
<BR>
<%= link_to 'Edit Personal Information', edit_user_path(@user.id) %>

<% @parts= @user.participations %>
<% unless @parts.empty? %>
<table id="trip">
<h2>Here are your pending trips</h2>
<% @parts.each do |part| %>
  <tr>
    <td width="70%"><%= link_to part.trip.name.capitalize() , part.trip %></td>
    <td><%= part_change_links(part) %></td>
</tr>
<% end %>
</table>
<% end %>
<br />
<h2>Here are your travel profiles</h2>
  <%= link_to 'New', new_user_profile_path(@user.id) %>
<table id="trip">
<% @profiles.each do |profile| %>
  <tr>
    <td width="20%"><%= link_to profile.name.capitalize() , profile %></td>
    <td width="50%"><%= profile.description %>
    <td><%= link_to 'Change', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>



