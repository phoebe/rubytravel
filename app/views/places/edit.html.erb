<h1>Editing place</h1>

 <% form_for(@place) do |f| %>
  <%= hidden_field 'place', :id  %>
  <%= hidden_field 'place', :geonameid  %>
  Name<%= text_field 'place', :name  %>  
  <BR/>
  URL<%= text_field 'place', :url  %>
  <BR/>
  thumbnail<%= text_field 'place', :thumbnail_link  %>
  <BR/>
  Season:
  Jan<%= select('place',:season_1, @place.season_options,{:include_blank => true} ) %>
  Feb<%= select('place',:season_2, @place.season_options,{:include_blank => true} ) %>
  Mar<%= select('place',:season_3, @place.season_options,{:include_blank => true} ) %>
  Apr<%= select('place',:season_4, @place.season_options,{:include_blank => true} ) %>
  May<%= select('place',:season_5, @place.season_options,{:include_blank => true} ) %>
  Jun<%= select('place',:season_6, @place.season_options,{:include_blank => true} ) %>
  Jul<%= select('place',:season_7, @place.season_options,{:include_blank => true} ) %>
  Aug<%= select('place',:season_8, @place.season_options,{:include_blank => true} ) %>
  Sep<%= select('place',:season_9, @place.season_options,{:include_blank => true} ) %>
  Oct<%= select('place',:season_10, @place.season_options,{:include_blank => true} ) %>
  Nov<%= select('place',:season_11, @place.season_options,{:include_blank => true} ) %>
  Dec<%= select('place',:season_12, @place.season_options,{:include_blank => true} ) %>
  
  <BR/>
  Street Address<%= text_field 'place', :street_address  %>
  <BR/>
  City<%= text_field 'place', :city  %>
  State<%= text_field 'place', :state  %>
  <BR/>
  Postal_code<%= text_field 'place', :postal_code  %>
  Country_code<%= text_field 'place', :country_code  %>
  <BR/>
   <%= link_to_remote  "Geocode",:method=>"get",
      :url  => {:action=>'lookup'},
     :with => "'country_code='+ document.getElementById('place_country_code').value+
     '&state='+document.getElementById('place_state').value+
     '&city='+document.getElementById('place_city').value+
     '&postal_code='+document.getElementById('place_postal_code').value+
     '&street_address='+document.getElementById('place_street_address').value",
      :update => "latlng" %>

 <div id='latlng'>
    Latitude<%= text_field 'place', :latitude  %>
    Longitude<%= text_field 'place', :longitude  %>
  </div>
 
 
  Phone<%= text_field 'place', :phone  %>
  <BR/>
  Email<%= text_field 'place', :email  %>
  <BR/>
  Rating<%= text_field 'place', :rating  %>
  <BR/>
  Difficulty<%= text_field 'place', :difficulty  %>
  <BR/>
  Distance (km)<%= text_field 'place', :distance  %>
  <BR/>
  Area (sq metres)<%= text_field 'place', :area  %>
  <BR/>
  Accessibility<%= text_field 'place', :howaccessible  %>
  <BR/>
  Transport<%= text_field 'place', :transportation  %>
  <BR/>
  Use Code<%= text_area 'place', :use_code, :columns=>80 ,  :rows=>5 %>
  <BR/>
  Hours (text) <%= text_area 'place', :hours,:columns=>80 ,  :rows=>2  %>
  <BR/>
  Hour start(int)<%= text_field 'place', :hour_start  %>
  Hour end (int)<%= text_field 'place', :hour_end  %><br/>
  Days open(MTWTFSS)<%= text_field 'place', :open_days  %>

  <%= f.error_messages %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @place %> |
<%= link_to 'Back', places_path %>
