<h1>New trip</h1>

<% form_for(@trip) do |f| %>
  <%= f.error_messages %>
  Name:<%= f.text_field :name %><br/>
  Date(mm-dd-yyyy):<%= f.text_field :departureDate, :size=> 10 %>
  Duration:<%= f.text_field :duration, :size=> 4 %>days
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', trips_path %>
