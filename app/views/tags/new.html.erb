<h1>New tag</h1>

<% form_for(@tag) do |f| %>
  <%= f.error_messages %>

  <%= f.label :name %>
  <%= f.text_field :name %><br/>
  <%= f.label :uri %>
  <%= f.text_field :uri %><br />
  <%= f.label :parent %>
 <% @parents=Tag.find(:all); %>
 <%= collection_select(:tag, :id, @parents, :id, :name, options ={:prompt => "-Select a Parent"}, :class =>"tag") %>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

