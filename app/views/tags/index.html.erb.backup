<h1>Listing All Categories</h1>

<table>
  <tr>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.name , tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Categories', new_tag_path %>
