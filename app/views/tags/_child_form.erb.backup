
<table>

<th><%= link_to tag.name , edit_tag_path(tag) %></th>
<td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %>
<%= h tag.description %><%= link_to 'New', new_tag_tag_path(tag) %> </td>
<td>
<% tag.children.each do |ctag| %>
<%= h    ctag.name %>
  <%= render :partial => 'child_form', :locals => { :tag => ctag } %>
<% end %>
</td>

</table>